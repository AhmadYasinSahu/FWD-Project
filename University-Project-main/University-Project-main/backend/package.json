{
  "name": "research-grant-backend",
  "version": "1.0.0",
  "description": "Backend API for Air University Research Grant Application System",
  "main": "server.cjs",
  "scripts": {
    "start": "node server.cjs",
    "dev": "nodemon server.cjs",
    "build:web": "node scripts/copy-web-build.cjs",
    "package:exe": "pkg -t node18-win-x64 -o dist/research-grant-app.exe server.cjs",
    "build:exe": "npm run build:web && npm run package:exe",
    "test": "echo \"Error: no test specified\" && exit 1",
    "send-reset": "node scripts/send-reset.cjs",
    "verify-db": "node scripts/verify-db.cjs"
    ,
    "seed-demo": "node scripts/seed-demo.cjs"
  },
  "keywords": [
    "research",
    "grant",
    "university",
    "api"
  ],
  "author": "Air University",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "nodemon": "^3.0.2"
  },
  "optionalDependencies": {
    "mongodb-memory-server": "^9.5.0"
  },
  "pkg": {
    "assets": [
      "web-build/**/*"
    ]
  }
